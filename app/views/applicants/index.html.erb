<div class="flex items-baseline justify-between mb-6">
  <h2 class="mt-6 text-3xl font-extrabold text-gray-700">
    Applicants
  </h2>
  <%= link_to "Add a new applicant",
    new_applicant_path,
    class: "btn-primary-outline",
    data: {
      action: "click->slideover#open",
      remote: true
    } %>
</div>

<div class="flex mb-6 justify-end">
  <%= render "applicants/filter_form" %>
</div>

<div class="flex items-baseline justify-between px-10 md:px-6">
  <%= cable_ready_updates_for current_user.account, :applicants do %>
    <%= render "applicants/list", grouped_applicants: @grouped_applicants %>
  <% end %>
</div>