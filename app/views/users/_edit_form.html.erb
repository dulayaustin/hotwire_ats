<%= turbo_frame_tag dom_id(user) do %>
  <%= form_with model: user do |form| %>
    <div class="flex flex-col md:flex-row items-center px-4 py-4 sm:px-6 justify-between items-baseline">
      <div>
        <%= form.text_field :first_name, placeholder: "First Name" %>
        <%= form.text_field :last_name, placeholder: "Last Name" %>
      </div>
      <div>
        <%= form.text_field :email, placeholder: "Email Address" %>
      </div>
      <div class="text-right">
        <%= form.submit 'Save', class: 'btn-primary' %>
      </div>
    </div>
  <% end %>
<% end %>